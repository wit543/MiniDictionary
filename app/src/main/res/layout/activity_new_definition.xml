<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wit.minidictionary.activities.NewDefinitionActivity">

    <TextView
        android:id="@+id/partOfSpeechSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:text="Part of speech"
        android:textSize="20dp"
        android:textColor="#000000" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_word_part_of_speech_spinner"
        android:layout_below="@id/partOfSpeechSubject"
        ></Spinner>

    <TextView
        android:id="@+id/meaningSubjecr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Meaning"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/new_word_part_of_speech_spinner"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/meaningField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type Meaning Here"
        android:textSize="20dp"
        android:layout_below="@+id/meaningSubjecr" />

    <TextView
        android:id="@+id/synonymSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:text="Synonym"
        android:textSize="20dp"
        android:layout_below="@id/meaningField"
        android:textColor="#000000" />

    <GridView
        android:id="@+id/synonum_grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/synonymSubject"></GridView>

    <Button
        android:id="@+id/addSynonymButton"
        android:text="Add Synonym"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/synonum_grid_view"/>

    <Button
        android:id="@+id/addDefinitionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cancelButton"
        android:text="Add Definition"/>

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Cancel"/>




</RelativeLayout>
