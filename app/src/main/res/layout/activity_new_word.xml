<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.asus.minidictionary.activities.NewWordActivity">


    <TextView
        android:id="@+id/wordSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Word"
        android:editable="false"
        android:textSize="20dp"
        android:textColor="#000000" />


    <EditText
        android:id="@+id/wordField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type Word Here"
        android:layout_below="@+id/wordSubject"
        android:layout_marginBottom="20dp"/>


    <TextView
        android:id="@+id/pronunciationSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pronunciation"
        android:editable="false"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/wordField"/>

    <EditText
        android:id="@+id/pronunciationField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type Pronunciation Here"
        android:layout_below="@+id/pronunciationSubject"
        android:layout_marginBottom="20dp"/>



    <TextView
        android:id="@+id/translationSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Translation"
        android:editable="false"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/pronunciationField"/>

    <ListView
        android:id='@+id/transaltions_list_view'
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/translationSubject">
    </ListView>

    <Button
        android:id="@+id/addTranslationButton"
        android:text="Add Translation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transaltions_list_view"/>

    <Button
        android:id="@+id/addWordButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Add Word"/>


</RelativeLayout>